{
  "name": "guru-hote-challenge",
  "version": "0.0.1",
  "description": "Backend - Internal tools",
  "author": "Fernando Soto <erickfernando@gmail.com>",
  "repository": "https://github.com/ferso/intelligential-challenge.git",
  "license": "MIT",
  "keywords": [
    "typescript",
    "esbuild"
  ],
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest --verbose --detectOpenHandles --config ./jest.config.json",
    "test:watch": "jest --watch --verbose --config ./jest.config.json",
    "test:coverage": "jest --coverage",
    "dev": "npx ts-node-dev -r tsconfig-paths/register src/main",
    "start": "npx ts-node -r tsconfig-paths/register dist/src/main",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.build.json"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.0",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "add": "^2.0.6",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "apollo-server": "^3.6.3",
    "axios": "^0.26.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "class-validator": "^0.13.2",
    "cli-color": "^2.0.1",
    "dotenv": "^16.0.0",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongodb": "^4.4.0",
    "reflect-metadata": "^0.1.13",
    "testcontainers": "^8.2.0",
    "ts-node-dev": "^1.1.8",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.43",
    "winston": "^3.6.0",
    "yarn": "^1.22.17"
  },
  "jest": {
    "rootDir": "test",
    "root": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
